{
    "name": "med2vec recall30",
    "n_gpu": 1,
    
    "model": {
        "type": "Med2Vec",
        "module_name": "med2vec",
        "args": {
            "icd9_size": 4876,
            "embedding_size": 256,
            "hidden_size": 512
        }
    },
    "data_loader": {
        "type": "Med2VecDataLoader",
        "args": {
            "data_dir": "./data",
            "batch_size": 1000,
            "num_codes": 4876,
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "med2vec_loss",
    "loss_window": 5, 
    "metrics": [
         "recall_k"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Med2VecTrainer",
        "module_name": "med2vec_trainer",
        "epochs": 1000,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2000,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        
        "tensorboardX": false,
        "log_dir": "saved/runs"
    }
}
